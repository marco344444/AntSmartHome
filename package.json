{
  "name": "antsmarthome",
  "version": "1.0.0",
  "description": "Landing page profesional para AntSmartHome - DomÃ³tica en Bucaramanga, Colombia",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc && npm run copy-views",
    "copy-views": "node -e \"const fs=require('fs');const path=require('path');function copyDir(s,d){fs.mkdirSync(d,{recursive:true});fs.readdirSync(s).forEach(f=>{const sp=path.join(s,f),dp=path.join(d,f);fs.statSync(sp).isDirectory()?copyDir(sp,dp):fs.copyFileSync(sp,dp)})};copyDir('src/views','dist/views')\"",
    "start": "node dist/app.js",
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "watch": "tsc -w"
  },
  "keywords": [
    "domotica",
    "smart-home",
    "bucaramanga",
    "landing-page",
    "express",
    "ejs",
    "typescript"
  ],
  "author": "AntSmartHome",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-ejs-layouts": "^2.5.1",
    "helmet": "^7.1.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
